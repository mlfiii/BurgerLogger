<h1>Burgers!</h1>

<h2>Burgers that are Devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        <p>Burger Name: {{this.burger_name}}
        </p><button type="submit" button_id={{this.id}} class="update-button" value="0">Regurgitate!</button>
        <button type="submit" button_id={{this.id}} class="delete-button">Delete</button>
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Burgers were NOT devoured!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        <p>Burger Name: {{this.burger_name}}
        </p><button type="submit" button_id={{this.id}} class="update-button" value="1">Devour Now!</button>
        <button type="submit" button_id={{this.id}} class="delete-button">Delete</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Devoured
    </div>

    <button type="submit">Add Burger</button>
</form>